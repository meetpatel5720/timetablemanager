{
  "$schema": "http://json-schema.org/draft-04/schema#",
  "type": "object",
  "properties": {
    "courses": {
      "type": "array",
      "items": {
        "type": "object",
        "properties": {
          "course_code": {
            "type": "string"
          },
          "course_title": {
            "type": "string"
          }
        },
        "required": [
          "course_code",
          "course_title"
        ]
      }
    },
    "days": {
      "type": "array",
      "items": {
        "type": "object",
        "properties": {
          "day_name": {
            "type": "string"
          },
          "lectures": {
            "type": "array",
            "items": {
              "type": "object",
              "properties": {
                "type": {
                  "type": "string"
                },
                "start_time": {
                  "type": "string",
                  "enum": [
                    "09:00"
                  ]
                },
                "end_time": {
                  "type": "string",
                  "enum": [
                    "10:00"
                  ]
                },
                "course_code": {
                  "type": "string",
                  "enum": [
                    "",
                    "CP301"
                  ]
                },
                "course_title": {
                  "type": "string",
                  "enum": [
                    "",
                    "WT"
                  ]
                },
                "lab": {
                  "type": "array",
                  "items": {
                    "type": "object",
                    "properties": {
                      "batch": {
                        "type": "string"
                      },
                      "course_code": {
                        "type": "string",
                        "enum": [
                          "CP301"
                        ]
                      }
                    },
                    "required": [
                      "batch",
                      "course_code"
                    ]
                  }
                }
              },
              "required": [
                "type",
                "start_time",
                "end_time",
                "course_code",
                "course_title",
                "lab"
              ]
            }
          }
        },
        "required": [
          "day_name",
          "lectures"
        ]
      }
    }
  },
  "required": [
    "courses",
    "days"
  ]
}